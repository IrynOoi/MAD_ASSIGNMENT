<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Allergen Predictor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Dataset Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Dataset:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerDataset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Dataset Info -->
    <TextView
        android:id="@+id/tvDatasetInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No dataset selected"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"/>

    <!-- Action Buttons -->
    <Button
        android:id="@+id/btnLoadDataset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Dataset"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnPredictAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predict All in Dataset"
        android:layout_marginBottom="8dp"
        android:enabled="false"/>

    <Button
        android:id="@+id/btnViewResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Results"
        android:layout_marginBottom="24dp"
        android:visibility="gone"/>

    <!-- Progress Section -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:indeterminate="false"
        android:max="100"
        android:progressTint="#4CAF50"
        android:progressBackgroundTint="#CCCCCC"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <!-- Quick Test Section (from original) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick Test (Single Item):"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ingredients (comma separated)"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnPredict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predict Allergens"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#f0f0f0"/>

</LinearLayout>